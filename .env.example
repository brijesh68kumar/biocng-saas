# Runtime mode: development or production
NODE_ENV=development

# Backend server port
PORT=5000

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/biogas

# JWT settings (MUST change secret for production)
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=7d

# CORS whitelist. Keep empty in local dev to allow all origins.
# For production, set explicit comma-separated origins.
# Example: https://app.example.com,https://admin.example.com
CORS_ORIGIN=

# Basic API rate limit settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=500

# Optional helper vars for smoke/e2e scripts
SMOKE_BASE_URL=http://localhost:5000
SMOKE_ADMIN_EMAIL=admin@biocng.local
SMOKE_ADMIN_PASSWORD=Admin@123
